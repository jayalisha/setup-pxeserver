# D-I config version 2.0
# search path for the c32 support libraries (libcom32, libutil etc.)
path ubuntu-installer/amd64/boot-screens/
#include ubuntu-installer/amd64/boot-screens/menu.cfg
default ubuntu-installer/amd64/boot-screens/vesamenu.c32
prompt 0
timeout 15


label Ubuntu-Linux
        menu label ^Install Ubuntu Using PXE
        menu default
        kernel ubuntu-installer/amd64/linux
        append ks=http://{{ ansible_host }}/ks.cfg url=http://{{ ansible_host }}/local.seed live-installer/net-image=http://{{ ansible_host }}/ubuntu/install/filesystem.squashfs vgs=normal initrd=ubuntu-installer/amd64/initrd.gz ramdisk_size=16432 root=/dev/rd/0 rw --- 
